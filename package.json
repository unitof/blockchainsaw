{
  "name": "blockchainsaw",
  "version": "0.0.1",
  "description": "A realtime visualization of Bitcoin mining",
  "main": "app.js",
  "scripts": {
    "build": "npm run build:js",
    "build:js": "browserify --debug app.js -o www/built/browserified.js",
    "serve": "http-server -p 3000 www/",
    "start": "node app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-watch"
  },
  "watch": {
    "build:js": {
      "patterns": [
        "app.js",
        "package.json",
        "modules/**/*"
      ],
      "ignore": "www/built"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unitof/blockchainsaw.git"
  },
  "keywords": [
    "bitcoin",
    "blockchain",
    "data-visualization"
  ],
  "author": "Jacob Ford <j@cobford.com>",
  "license": "CC-BY-SA-4.0",
  "bugs": {
    "url": "https://github.com/unitof/blockchainsaw/issues"
  },
  "homepage": "https://github.com/unitof/blockchainsaw#readme",
  "dependencies": {
    "bitcoin-live-transactions": "github:unitof/bitcoin-live-transactions#master",
    "bitcoin-miner": "^1.2.1",
    "browserify": "^16.2.2",
    "http-server": "^0.11.1",
    "morphable": "^0.6.0",
  },
  "devDependencies": {
    "npm-watch": "^0.3.0"
  }
}
